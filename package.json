{
  "name": "unipkg",
  "version": "0.0.4",
  "description": "Multi-platform implementation of dpkg",
  "main": "src/index.js",
  "repository": "FrederickGeek8/unipkg",
  "author": "Frederick Morlock",
  "license": "LGPL-3.0-only",
  "scripts": {
