{
  "name": "unipkg",
  "version": "0.2.1",
  "description": "Multi-platform implementation of dpkg",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrederickGeek8/unipkg.git"
  },
  "author": "Frederick Morlock",
  "license": "LGPL-3.0-only",
  "scripts": {
    "lint": "eslint src tests bin",
    "lint-fix": "eslint src tests bin --fix",
    "test": "npm run lint && npm run test-only",
    "test-only": "jest --verbose",
    "test-coverage": "jest --coverage --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testEnvironment": "node"
  },
  "bin": {
    "unipkg": "bin/unipkg.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "keywords": [
    "dpkg",
    "deb",
    "multiplatform",
    "debian",
    "apt",
    "package",
    "repository",
    "repo"
  ],
  "dependencies": {
    "ar": "0.0.1",
    "commander": "^2.19.0",
    "fs-extra": "^6.0.1",
    "klaw": "^2.1.1",
    "tar": "^7.4.0",
    "tmp": "^0.2.3"
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-prettier": "^2.7.0",
    "jest": "^29.7.0",
    "prettier": "^1.16.4"
  }
}
